FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    sides
    {
		type				acousticWaveTransmissive;
		advectiveSpeed      1;
		value 				uniform (0 0 0);
    }

    empty
    {
        type            empty;
    }
}

